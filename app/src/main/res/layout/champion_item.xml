<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription">

    <data>

        <variable
            name="item"
            type="com.github.jhamin0511.teamfighttactics.data.dto.champion.ChampionDto" />
    </data>

    <com.github.jhamin0511.teamfighttactics.widget.layout.SquareLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/rare"
            android:padding="3dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/coin"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@color/rare"
            android:padding="4dp"
            android:src="@drawable/ic_coin"
            app:layout_constraintEnd_toStartOf="@id/coin_count"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/coin_count"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@color/rare"
            android:gravity="center"
            android:paddingStart="0dp"
            android:paddingEnd="3dp"
            android:text="@{String.valueOf(item.cost)}"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/coin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/coin"
            tools:text="3" />

        <LinearLayout
            android:id="@+id/trait_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/rare"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="3dp"
            android:text="@{item.name}"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Ahri" />

    </com.github.jhamin0511.teamfighttactics.widget.layout.SquareLayout>

</layout>
